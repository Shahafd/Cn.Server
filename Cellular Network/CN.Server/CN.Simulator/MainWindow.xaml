<Window x:Class="CN.Simulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CN.Simulator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Margin="0,10" TextAlignment="Center" Text="Welcome To Simulator" FontSize="24"></TextBlock>
        <TextBlock Grid.Row="1" Text="User Name:" FontSize="30"></TextBlock>
        <TextBox Grid.Row="1" Text="{Binding Username}" Margin="0,40,0,0" FontSize="30" ></TextBox>
        <TextBlock Grid.Row="1" Text="Password:" Margin="0,80,0,0" FontSize="30"></TextBlock>
        <PasswordBox x:Name="PasswordTbx" Grid.Row="1" Password="123456" Margin="0,120,0,0"  FontSize="30"></PasswordBox>
        <Button Grid.Row="1" Margin="0,110,0,0" Content="Sign In" FontSize="30" Height="75" Command="{Binding loginCommand}" CommandParameter="{Binding ElementName=PasswordTbx}" Background="#FF81FF81"></Button>

    </Grid>
</Window>
